@model Product.Admin.ViewModel.ProductModel
@{
    ViewBag.Title = "Index";
    
}

<h2>@Model.Name adlı ürün özellikleri <small>@(TempData["err"] == null ? "" : TempData["err"])</small></h2>

<p>@Html.ActionLink("Yeni Özellik Ekle","Create",new { id=Model.Id})</p>
<table class="table">
    
    <tr>
        <th>@Html.DisplayNameFor(model=>model.ProductFeatures.First().Name)</th>
        <th>@Html.DisplayNameFor(model => model.ProductFeatures.First().Value)</th>
        <th></th>
    </tr>
    @foreach (var item in Model.ProductFeatures)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem=>item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Value)</td>
            <td>@Html.ActionLink("Düzenle","Edit",new { id=item.Id, prodId=Model.Id})|
            @Html.ActionLink("Detaylar", "Details", new { id = item.Id, prodId = Model.Id })|
                @Html.ActionLink("Sil", "Delete", new { id = item.Id, prodId = Model.Id })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Listeye Dön","Index","Product")
</div>